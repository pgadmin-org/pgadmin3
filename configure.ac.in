AC_PREREQ(2.57)
AC_REVISION($Revision: 4719 $)
AC_COPYRIGHT(Copyright 2002 - 2006 The pgAdmin Development Team)
AC_INIT(pgadmin3, PGADMIN_LONG_VERSION, pgadmin-support@postgresql.org)
AC_CONFIG_AUX_DIR(config)
AC_CONFIG_SRCDIR([src/pgAdmin3.cpp])
AM_CONFIG_HEADER([config.h])
AC_CANONICAL_HOST
AM_INIT_AUTOMAKE([tar-ustar])
AC_PREFIX_DEFAULT([/usr/local/pgadmin3])

# Checks for programs.
AC_PROG_CC
AC_PROG_CXX
CHECK_CPP_COMPILER

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([arpa/inet.h netdb.h netinet/in.h stdlib.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST
AC_TYPE_SIZE_T
AC_HEADER_TIME

# Checks for library functions.
AC_FUNC_STRTOD
AC_CHECK_FUNCS([gethostbyname inet_ntoa memmove memset strchr])

# Custom checks
ENABLE_DEBUG
ENABLE_STATIC
ENABLE_APPBUNDLE
AM_CONDITIONAL([APPBUNDLE], [test x$BUILD_APPBUNDLE = xyes])

LOCATE_POSTGRESQL
SETUP_POSTGRESQL

SET_WX_VERSION
LOCATE_WXWIDGETS
SETUP_WXWIDGETS

LOCATE_LIBXML2
SETUP_LIBXML2

CLEANUP

AC_CONFIG_FILES([Makefile
		 i18n/Makefile
		 src/Makefile
		 pkg/Makefile
		 pkg/debian/Makefile
		 pkg/fc1/Makefile
		 pkg/mac/Makefile
		 pkg/mandrake/Makefile
		 pkg/redhat/Makefile
		 pkg/slackware/Makefile
		 pkg/src/Makefile
		 pkg/suse/Makefile
		 pkg/win32/Makefile
		 xtra/Makefile
		 xtra/pgagent/Makefile
		 xtra/pgagent/pgaevent/Makefile
		 xtra/wx-build/Makefile])
AC_OUTPUT

SUMMARY
